.fullscreen-menu
	position relative
	display flex
	justify-content space-between
	height 100vh
	z-index 1
	background url('../i/fullscreen-menu/fullscreen-menu-1.jpg') no-repeat center
	transition background-image .3s ease-in-out
	&__item
		position relative
		flex 1
		display flex
		flex-direction column
		align-items center
		height 100%
		border-right 3px solid cloud-burst
		cursor pointer
		&:hover
			&::before
				opacity 0.6
			.fullscreen-menu__content
				opacity 1
			.fullscreen-menu__icon
				fill gold
		&::before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background cloud-burst
			opacity 0.3
			z-index -1
			transition all .3s
	&__content
		flex 1
		display flex
		flex-direction column
		align-items center
		margin-top 30%
		opacity 0
		transition all .5s
	&__title
		font-size 20px
		text-transform uppercase
		color white
	&__icon
		display block
		margin-top 60%
		size(60px)
		fill white
		transition fill .6s
	&__link
		display block
		margin-top auto
		margin-bottom 30px
		color yellow

