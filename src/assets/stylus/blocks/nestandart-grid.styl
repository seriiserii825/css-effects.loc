.grid
	width 700px
	padding 20px
	-webkit-column-count 3
	-moz-column-count 3
	column-count 3

.grid__item-block
	display inline-block
	margin-bottom 20px
	width 200px
	background seance
	page-break-inside avoid
	&-100
		height 100px
	&-300
		height 300px
	&-400
		height 400px
	&-600
		height 600px
	&-700
		height 700px
