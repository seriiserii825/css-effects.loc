@import '../libs/slick/slick/slick.css'
@import 'partials/fonts'
@import 'partials/variables'
@import 'partials/mixins'

*
	box-sizing border-box

body
	font-size 18px
	margin 0
	padding 0
	color text-color
	background bg-color

img
	max-width 100%
	height auto

.hidden
	display none

.container
	margin 0 auto
	max-width 1200px

ul
	reset-list()

a
	text-decoration none
	color inherit

@import 'blocks/header'
@import 'blocks/menu'
@import 'blocks/3d-cards'
@import 'blocks/btn-arrow'
@import 'blocks/card-slider'
@import 'blocks/nestandart-grid'
@import 'blocks/envelope'
@import 'blocks/city'
@import 'blocks/fullscreen-menu'


.keys
	position relative
	display flex
	flex 1
	min-height 100vh
	align-items center
	justify-content center
	background url('../i/keys/keys.jpg')
	&:before
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background black
		opacity 0.8
		z-index 1


.key
	position relative
	border .4rem solid black
	border-radius .5rem
	margin 1rem
	font-size 1.5rem
	padding 1rem .5rem
	transition all .07s ease
	width 10rem
	text-align center
	color white
	background rgba(0,0,0,0.4)
	text-shadow 0 0 .5rem black
	z-index 2
	&:hover
		border-color gold
		cursor pointer


.playing
	transform scale(1.1)
	border-color: gold;
	box-shadow: 0 0 1rem gold;


kbd
	display: block;
	font-size: 4rem;


.sound
	font-size: 1.2rem;
	text-transform: uppercase;
	letter-spacing: .1rem;
	color: gold;

