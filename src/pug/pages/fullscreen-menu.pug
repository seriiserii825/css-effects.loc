extends template

block title
	title Полноэкранное меню

block content
	include ../includes/mixins
	.hidden
		include ../../../build/assets/i/svg/inline/sprite.svg

	include ../includes/header

	ul.fullscreen-menu#js-fullscreen-menu
		li.fullscreen-menu__item(data-fullscreen-menu="fullscreen-menu-1.jpg")
			+icon('home', 'fullscreen-menu__icon')
			.fullscreen-menu__content
				span.fullscreen-menu__title Главная
				a(href="").fullscreen-menu__link Подробнее
		li.fullscreen-menu__item(data-fullscreen-menu="fullscreen-menu-2.jpg")
			+icon('blog', 'fullscreen-menu__icon')
			.fullscreen-menu__content
				span.fullscreen-menu__title Блог
				a(href="").fullscreen-menu__link Подробнее
		li.fullscreen-menu__item(data-fullscreen-menu="fullscreen-menu-3.jpg")
			+icon('about', 'fullscreen-menu__icon')
			.fullscreen-menu__content
				span.fullscreen-menu__title Обо мне
				a(href="").fullscreen-menu__link Подробнее
		li.fullscreen-menu__item(data-fullscreen-menu="fullscreen-menu-4.jpg")
			+icon('portfolio', 'fullscreen-menu__icon')
			.fullscreen-menu__content
				span.fullscreen-menu__title Портфолио
				a(href="").fullscreen-menu__link Подробнее
		li.fullscreen-menu__item(data-fullscreen-menu="fullscreen-menu-5.jpg")
			+icon('contacts', 'fullscreen-menu__icon')
			.fullscreen-menu__content
				span.fullscreen-menu__title Контакты
				a(href="").fullscreen-menu__link Подробнее

	include ../includes/scripts/ie-scripts
	include ../includes/scripts/scripts.pug
	script(src="assets/libs/slick/slick/slick.min.js")
	script(src="assets/js/main.min.js")

